		"lib/**/*"
	],
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^2.20.0",
		"@typescript-eslint/parser": "^2.20.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.7.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-prettier": "^3.1.1",
		"prettier": "^1.19.1",
		"typescript": "^3.7.5"
	}
