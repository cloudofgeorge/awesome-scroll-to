{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"rootDir": "src",
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"lib": ["es2017", "es7", "es6", "dom"],
		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
